[CONDOR]
root = "/global/cfs/cdirs/jaws/condor"
condor_q_nobatch_id_cmd = "condor_q -pr ${CONDOR:root}/fmt_nobatch_id.cpf"
condor_q_nobatch_running_cmd = "condor_q -pr ${CONDOR:root}/fmt_nobatch_running.cpf"

[SLURM]
user = jaws_jtm
sbatch_cmd = "sbatch --parsable %s"
sbatch_cmd_esslurm = "module load esslurm && sbatch --parsable %s"
normal_worker_job = "${CONDOR:root}/condor_worker_normal.job"
highmem_worker_jgishared_job = "${CONDOR:root}/condor_worker_highmem_jgi_shared.job"
highmem_worker_jgiexvivo_job = "${CONDOR:root}/condor_worker_highmem_jgi_exvivo.job"
scancel_cmd = "scancel %s"
scancel_cmd_esslurm = "module load esslurm && scancel %s"

# add
squeue_cmd_wc_l = """squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t PENDING | grep jaws_condor_normal_worker | wc -l"""
squeue_cmd_running_pending_wc_l = """squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t R,PD | grep jaws_condor_normal_worker | wc -l"""
squeue_cmd_esslurm_shared_wc_l = """module load esslurm && squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t PENDING | grep jaws_condor_highmem_jgi_shared_worker | wc -l"""
squeue_cmd_esslurm_exvivo_wc_l = """module load esslurm && squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t PENDING | grep jaws_condor_highmem_jgi_exvivo_worker | wc -l"""

# remove
squeue_cmd_r_pd_jid = """squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t R,PD | grep jaws_condor_normal_worker """ + "| awk '{ print $1; }'"
squeue_cmd_esslurm_shared_r_pd_jid = """module load esslurm && squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t R,PD | grep jaws_condor_highmem_jgi_shared_worker""" + "| awk '{ print $1; }'"
squeue_cmd_esslurm_exvivo_r_pd_jid = """module load esslurm && squeue --format="%.18i %.9P %.40j %.8u %.10T %.10M %.9l %.6D %R" --me -u ${SLURM:user} -t R,PD | grep jaws_condor_highmem_jgi_exvivo_worker""" + "| awk '{ print $1; }'"

[POOL]
min = 3
max = 100
