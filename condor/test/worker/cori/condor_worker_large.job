#SBATCH --mem=740G
#SBATCH -N 1
#SBATCH -C skylake
#SBATCH -A fungalp
#SBATCH -q jgi_shared
#SBATCH -t 72:00:00
#SBATCH --job-name=jaws_condor_large_worker
#SBATCH -e /global/cscratch1/sd/jaws_jtm/condor/slurm/%N-%j.err
