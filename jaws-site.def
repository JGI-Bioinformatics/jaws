Bootstrap: docker
From: python:3.10

%setup
  mkdir -p /usr/app

%files
  . /usr/app/
  image_version.yml /usr/app/image_version.yml

%post
    pip install --upgrade pip
    pip install -r /usr/app/requirements.txt
    cd /usr/app/ && pip install .

%startscript
    jaws-site --config /etc/config/site/jaws-site.conf "$@"

%runscript
    jaws-site --config /etc/config/site/jaws-site.conf "$@"
